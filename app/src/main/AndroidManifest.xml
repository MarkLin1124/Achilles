<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mark.achilles">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activity.HomePageActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.TeamManagerActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.PlayerManagerActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.SelectTeamActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.GameListActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.SelectStarterActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>